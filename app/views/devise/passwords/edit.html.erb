<%= devise_error_messages! %>

<div class='card mx-auto col-lg-8 col-xxl-6'>
  <div class='card-body'>
    <h2 class='card-title'>Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'p-4 container my-3', method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="row mb-4">
        <%= f.label :password, 'New password', class: 'col-4 col-lg-2 col-form-label' %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control col" %>
      </div>

      <div class="row mb-4">
        <%= f.label :password_confirmation, class: 'col-4 col-lg-2 col-form-label' %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control col' %>
      </div>

      <div class="d-flex justify-content-between mt-5">
        <%= link_to 'Back', :back, class: "btn btn-secondary" %>
        <%= f.submit "Change my password", class: 'btn btn-success' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
