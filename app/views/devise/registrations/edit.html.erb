<h2>Edit <%= resource_name.to_s.humanize %></h2>

<div class="container my-5">
  <%= devise_error_messages! %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="form-group row">
      <%= f.label :email, class: 'col-sm-4 col-form-label' %>
      <div class="col-sm-8">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>
    </div>
    
    <div class="form-group row">
      <%= f.label :first_name, class: 'col-sm-4 col-form-label' %>
      <div class="col-sm-8">
        <%= f.text_field :first_name, autocomplete: "first_name", class: 'form-control' %>
      </div>
    </div>
    
    <div class="form-group row">
      <%= f.label :last_name, class: 'col-sm-4 col-form-label' %>
      <div class="col-sm-8">
        <%= f.text_field :last_name, autocomplete: "last_name", class: 'form-control' %>
      </div>
    </div>
    
    <div class="form-group row">
      <%= f.label :role, "Account Type", class: 'col-sm-4 col-form-label' %>
      <div class="col-sm-8">
        <%= f.select :role, (User.roles.keys.map { |r| [r.humanize,r.to_s] if r.to_s != 'admin' || current_user.admin? }.compact), { include_blank: "Select account type" }, class: "custom-select" %>
      </div>
    </div>
    
    <div class="form-group row">
      <%= f.label :password, class: 'col-sm-4 col-form-label' %>
      <div class="col-sm-8">
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        <i>(leave blank if you don't want to change it)</i>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password_confirmation, class: 'col-sm-4 col-form-label' %>
      <div class="col-sm-8">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>
    </div>
  
    <div class="form-group row">
      <%= f.label :current_password, class: 'col-sm-4 col-form-label' %>
      <div class="col-sm-8">
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
        <i>(we need your current password to confirm your changes)</i>
      </div>
    </div>
    
    <div class="actions d-flex justify-content-between">
      <%= link_to "Back", :back, class: 'btn btn-secondary' %> 
      <%= f.submit "Update", class: 'btn btn-success', data: { turbolinks: "false"} %>
    </div>
  <% end %>
</div>

<div class="container d-flex">
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbolinks: 'false' }, method: :delete, class: 'btn btn-outline-danger' %>
</div>