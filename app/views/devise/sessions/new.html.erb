<%= devise_error_messages! %>

<div class='card mx-auto col-lg-8 col-xxl-6'>
  <div class='card-body'>
    <h2 class='card-title'>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'px-4 my-3' }) do |f| %>
      <div class="row mb-4">
        <%= f.label :email, class: 'col-4 col-lg-2 col-form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col', placeholder: 'john.doe@example.com' %>
      </div>
      <div class="row mb-4">
        <%= f.label :password, class: 'col-4 col-lg-2 col-form-label' %>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control col' %>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="form-check mb-4">
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <%= f.label :remember_me, class: 'form-check-label' %>
        </div>
      <% end %>
      <div class="d-flex justify-content-between mt-5">
        <%= link_to "Cancel", :back, class: 'btn btn-secondary' %>
        <%= f.submit "Log In", class: 'btn btn-success', data: { turbolinks: "false"} %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
