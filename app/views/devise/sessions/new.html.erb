<h2>Log in</h2>

<%= devise_error_messages! %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-control p-4 container my-3' }) do |f| %>
  <div class="form-group row">
    <%= f.label :email, class: 'col-sm-4 col-form-label' %>
    <div class="col-sm-8">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'john.doe@example.com' %>
    </div>
  </div>
  
  <div class="form-group row">
    <%= f.label :password, class: 'col-sm-4 col-form-label' %>
    <div class="col-sm-8">
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions d-flex justify-content-between">
    <%= link_to "Back", :back, class: 'btn btn-secondary' %>
    <%= f.submit "Log In", class: 'btn btn-success', data: { turbolinks: "false"} %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
