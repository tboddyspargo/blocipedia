<% flash.each  do |key,fl| %>
  <div class="alert <%= flash_class(key) %>">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong><%= fl.is_a?(Hash) ? "#{fl['heading'].html_safe}: " : '' %></strong>
    <%= fl.is_a?(Hash) ? fl['message'].html_safe : fl %>
  </div>
<% end %>