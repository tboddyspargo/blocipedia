<div class="d-flex justify-content-between">
  <div class="d-flex justify-content-start">
    <h1><%= @wiki.title %></h1>
    <% if @wiki.private %>
      <span class="badge badge-primary badge-pill align-self-center ml-3">Private</span>
    <% end %>
  </div>
  <%= link_to 'Edit', edit_wiki_path(@wiki.id), class: 'btn btn-sm btn-outline-primary align-self-center' %>
</div>
<div class="d-flex justify-content-between align-items-center mb-5">
  <div>
    <strong><%= @wiki.user.email %></strong>
  </div>
  <div>
    <i><%= @wiki.created_at.to_formatted_s(:short) %></i>
  </div>
</div>
<div class="wiki-main">
  <%= markdown(@wiki.body) %>
</div>
