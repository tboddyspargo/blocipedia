<div class="d-flex justify-content-between">
  <h1><%= @wiki.title %></h1>
  <%= link_to 'Edit', edit_wiki_path(@wiki.id), class: 'btn btn-sm btn-outline-primary align-self-center' %>
</div>
<div class="d-flex justify-content-between align-items-center mb-5">
  <strong><%= @wiki.user.email %></strong>
  <div>
    
    <i><%= @wiki.created_at.to_formatted_s(:short) %></i>
  </div>
</div>
<div class="wiki-main">
  <%= markdown(@wiki.body) %>
</div>
